@using HomeBuxgalterFront.Models;
@inject HttpClient http
@page "/profits"

<h3>Profits</h3>

@if (ProfitList == null)
{
    <p><em>Loading...</em></p>
}
else{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Category</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var profit in ProfitList)
        {
                   <tr>
                        <td>@profit.Date.ToShortDateString()</td>
                        <td>@profit.Category</td>
                        <td>@profit.Amount</td>
                   </tr>
        }
        </tbody>
    </table>
}

@code {
	private List<Profit?>? ProfitList { get; set; } = new();

	protected override async Task OnInitializedAsync()
	{
		var request = new HttpRequestMessage(HttpMethod.Get, "/api/profits");

		var response = await http.SendAsync(request);

		ProfitList = await response.Content.ReadFromJsonAsync<List<Profit?>?>();
	}
}
