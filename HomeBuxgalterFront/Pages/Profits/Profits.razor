@    using HomeBuxgalterFront.Managers;
@    using HomeBuxgalterFront.Models;
    using HomeBuxgalterFront.Models.ProfitModels;
@inject HttpClient http
@inject RequestManager _requestManager
@page "/profits"

<h3>Profits</h3>

@if (ProfitList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Category</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var profit in ProfitList)
        {
                   <tr>
                        <td>@profit!.Date.ToShortDateString()</td>
                        <td>@profit.Category</td>
                        <td>@profit.Amount</td>
                   </tr>
        }
        </tbody>
    </table>
}

@code {
	private List<Profit?>? ProfitList { get; set; } = new();

	protected override async Task OnInitializedAsync()
	{
        ProfitList = await _requestManager.Get<List<Profit?>?>($"/api/profits");
	}
}
